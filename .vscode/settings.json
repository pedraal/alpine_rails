{
  "rubyLsp.enabledFeatures": {
    "documentHighlights": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "selectionRanges": true,
    "semanticHighlighting": true,
    "formatting": true,
    "diagnostics": true,
    "codeActions": true
  },
  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify",
    "editor.formatOnSave": true
  },
  "files.associations": {
    "*.html.erb": "erb"
  },
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "server": "localhost",
      "port": 5432,
      "driver": "PostgreSQL",
      "name": "localhost",
      "database": "postgres",
      "username": "postgres",
      "password": "postgres"
    },
    {
      "previewLimit": 50,
      "server": "0.0.0.0",
      "port": 5432,
      "driver": "PostgreSQL",
      "name": "pg",
      "database": "postgres",
      "username": "postgres",
      "password": "postgres"
    }
  ]
}
